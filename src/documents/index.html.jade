.panes

  .pane.pane_left

      ul.nav.nav-tabs.nav-justified#contents-tabs
        li.active: a(href="#objects", role="tab", data-toggle="tab") Objects
        li: a(href="#texts", role="tab", data-toggle="tab") Words
        li: a(href="#videos", role="tab", data-toggle="tab") Videos
        li: a(href="#audios", role="tab", data-toggle="tab") Sounds

      .tab-content
        .tab-pane.active.scrollable#objects
          .contents.scrollable-content
            each item in document.contents.objects.concat(document.contents.objects).concat(document.contents.objects)
              .item.item_object
                .buttons
                  button.btn.btn-primary.btn-xs.button_add(type="button"): span.glyphicon.glyphicon-arrow-right
                  button.btn.btn-primary.btn-xs.button_remove(type="button"): span.glyphicon.glyphicon-remove
                figure
                  img(src=getUrl('images/objects/' + item.image + '.jpeg'))
                  figcaption
                    = item.author
                    | , 
                    = item.title
                    | , 
                    = item.year
        .tab-pane.scrollable#videos
          .contents.scrollable-content
            each item in document.contents.videos.concat(document.contents.videos).concat(document.contents.videos).concat(document.contents.videos).concat(document.contents.videos)
              .item.item_video
                .buttons
                  button.btn.btn-primary.btn-xs.button_add(type="button"): span.glyphicon.glyphicon-arrow-right
                  button.btn.btn-primary.btn-xs.button_remove(type="button"): span.glyphicon.glyphicon-remove
                != item.embed_code
        .tab-pane.scrollable#texts
          .contents.scrollable-content
            each item in document.contents.texts.concat(document.contents.texts).concat(document.contents.texts).concat(document.contents.texts).concat(document.contents.texts)
              .item.item_words
                .buttons
                  button.btn.btn-primary.btn-xs.button_add(type="button"): span.glyphicon.glyphicon-arrow-right
                  button.btn.btn-primary.btn-xs.button_remove(type="button"): span.glyphicon.glyphicon-remove
                each paragraph in item.text.split(/(\r?\n){2}/)
                  p= paragraph
        .tab-pane.scrollable#audios
          .contents.scrollable-content

  .pane.pane_right

    article.gridster
      .cells


